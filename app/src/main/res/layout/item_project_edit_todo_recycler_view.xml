<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="model"
            type="com.eric.startupmatching.project.treeview.model.task.TaskChildModel" />
        <variable
            name="viewHolder"
            type="com.eric.startupmatching.project.edit.ProjectEditTaskChildAdapter.ViewHolder" />
        <import type="android.view.View"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/half_regular_margin"
    android:paddingStart="@dimen/threex_regular_margin"
    android:paddingEnd="@dimen/regular_margin">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:cardBackgroundColor="@color/light_blue"-->
<!--        app:cardCornerRadius="8dp">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"
            android:background="@drawable/round_corner_light_blue">

            <TextView
                android:id="@+id/item"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/regular_margin"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/item"
                app:layout_constraintStart_toEndOf="@+id/item"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/detail"
                app:layout_constraintStart_toStartOf="@+id/tvContent"
                app:layout_constraintTop_toBottomOf="@+id/tvContent"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/center_text_font_noto" />

            <EditText
                android:id="@+id/detail_text"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@+id/detail"
                app:layout_constraintStart_toEndOf="@+id/detail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/confirm_button"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginStart="@dimen/regular_margin"
                android:textSize="16sp"
                android:text="@{model.content.description == null ? null : model.content.description}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start|top"
                android:hint="@string/enter_message"
                android:lines="1"
                android:maxLines="5"/>

            <TextView
                android:id="@+id/confirm_button"
                app:layout_constraintStart_toEndOf="@+id/detail_text"
                app:layout_constraintTop_toTopOf="@+id/detail_text"
                app:layout_constraintBottom_toBottomOf="@+id/detail_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="@dimen/regular_margin"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:background="@drawable/round_corner"
                android:text="@string/change"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/center_text_font_noto" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/icon_left1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/regular_margin"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/icon_left2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/icon_left1"
                android:layout_marginEnd="@dimen/half_regular_margin"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/icon_left3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/icon_left2"
                android:layout_marginEnd="@dimen/half_regular_margin"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--    </androidx.cardview.widget.CardView>-->
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>